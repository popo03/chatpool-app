<div class='chat-room-form'>
  <h1>新規要件</h1>
  <%=form_with model: @group, local: true do |f|%>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :要件, class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :group_name, class: 'chat__room_name chat-room-form__input', placeholder: '要件を入力してください'%>
      </div>
    </div>
    <div class='chat-room-form__field'>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <label class='chat-room-form__label' for='chat_room_チャットメンバー'>メンバー</label>
      </div>
      <div class='chat-room-form__field--right'>
        <div class='test'>
          <%= collection_check_boxes(:group, :user_ids, User.all, :id, :name) %>
        </div>
      </div>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'></div>
      <div class='chat-room-form__field--right'>
        <%= f.submit class: 'chat-room-form__action-btn'%>
      </div>
    </div>
  <% end %>
</div>
